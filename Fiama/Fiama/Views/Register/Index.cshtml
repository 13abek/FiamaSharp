@model AccountViewModel
@{
    ViewData["Title"] = "Index";
}

<!-- Utilize Cart Menu Start -->
<div id="ltn__utilize-cart-menu" class="ltn__utilize ltn__utilize-cart-menu">
    <div class="ltn__utilize-menu-inner ltn__scrollbar header-basket">
         <vc:headers-basket></vc:headers-basket>
    </div>
</div>
<!-- Utilize Cart Menu End -->


<div class="ltn__utilize-overlay"></div>

<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area ltn__breadcrumb-area-4 ltn__breadcrumb-color-white---">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner text-center">
                    <h1 class="ltn__page-title">Account</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a asp-controller="Home" asp-action="index">Home</a></li>
                            <li>Register</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- LOGIN AREA START (Register) -->
<div class="ltn__login-area pb-90">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-area text-center">
                    <h1>Register <br>Your Account</h1>
                    <p>
                        Lorem ipsum dolor, sit amet consectetur adipisicing elit. <br>
                        Sit aliquid,  Non distinctio vel iste.
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="account-login-inner">
                    <form method="post" asp-controller="register" asp-action="Create">
                        <input asp-for="Register.FirstName" class="form-control" placeholder="First Name*">
                        <span asp-validation-for="Register.FirstName"></span>
                        <input asp-for="Register.LastName" class="form-control" placeholder="Last Name*">
                        <span asp-validation-for="Register.LastName"></span>
                        <input asp-for="Register.Email" class="form-control" placeholder="Email*">
                        <span asp-validation-for="Register.Email"></span>
                        <input asp-for="Register.Password" class="form-control" placeholder="Password*">
                        <span asp-validation-for="Register.Password"></span>
                        <input asp-for="Register.PasswordConfirm" class="form-control" placeholder="Confirm Password*">
                        <span asp-validation-for="Register.PasswordConfirm"></span>
                        <label class="checkbox-inline">
                            <input type="checkbox" value="">
                            I consent to Herboil processing my personal data in order to send personalized marketing material in accordance with the consent form and the privacy policy.
                        </label>
                        <label class="checkbox-inline">
                            <input type="checkbox" value="">
                            By clicking "create account", I consent to the privacy policy.
                        </label>
                        <div class="btn-wrapper">
                            <button class="theme-btn-1 btn reverse-color btn-block" type="submit">CREATE ACCOUNT</button>
                        </div>
                    </form>
                    <div class="by-agree text-center">
                        <p>By creating an account, you agree to our:</p>
                        <p><a href="#">TERMS OF CONDITIONS  &nbsp; &nbsp; | &nbsp; &nbsp;  PRIVACY POLICY</a></p>
                        <div class="go-to-btn mt-50">
                            <a asp-controller="Login" asp-action="index">ALREADY HAVE AN ACCOUNT ?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- LOGIN AREA END -->
<!-- BRAND LOGO AREA START -->
<vc:brands></vc:brands>
<!-- BRAND LOGO AREA END -->

@section Modals{
    <partial name="Modals/_MobilMenu" />
}

@section scripts{
    <script src="~/js/myScripts/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/js/myScripts/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}




